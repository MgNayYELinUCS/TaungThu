<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Date:"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            tools:layout_editor_absoluteY="6dp"
            app:layout_constraintHorizontal_bias="0.025"
            tools:ignore="MissingConstraints" />

    <TextView
            android:id="@+id/daily_price_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="12/10/2019"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/date"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="6dp" />

    <ImageView
            android:id="@+id/daily_price_image"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="10dp"
            android:src="@drawable/userpng"
            app:layout_constraintTop_toBottomOf="@+id/daily_price_date"
            app:layout_constraintBottom_toBottomOf="parent" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintVertical_bias="0.008" android:layout_marginTop="8dp"/>
    <View
            android:layout_width="match_parent"
            app:layout_constraintHorizontal_weight="1"
            android:background="@color/colorPrimary"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/daily_price_image"/>



</androidx.constraintlayout.widget.ConstraintLayout>