<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/news_row"
            android:background="?selectableItemBackground">

        <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:minLines="3"
                android:text="title"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/iv_options"
                app:layout_constraintStart_toEndOf="@id/iv_news_image"
                app:layout_constraintTop_toTopOf="@id/iv_news_image" />

        <ImageView
                android:id="@+id/iv_news_image"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:contentDescription="image_desc"
                android:src="@drawable/photo_female_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tv_news_created_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"

                android:text="time"
                android:textColor="@color/search_layover_bg"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/tv_news_title"
                app:layout_constraintTop_toBottomOf="@id/tv_news_title" />

        <ImageButton
                android:id="@+id/iv_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="hello"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_news_title"
                app:srcCompat="@android:drawable/ic_menu_more" />
    </androidx.constraintlayout.widget.ConstraintLayout>
