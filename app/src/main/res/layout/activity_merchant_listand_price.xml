<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        tools:context=".Merchant.MerchantDetailActivity">

    <ImageView
            android:id="@+id/merchant_png"
            android:src="@mipmap/home"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="200dp"/>
    <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="match_parent"

            android:layout_height="wrap_content" android:id="@+id/cardView2" tools:layout_editor_absoluteX="5dp">
        <TableLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TableRow
                    android:weightSum="2">
                <TextView
                        style="@style/tablelayout_textview"
                        android:text="ပြဲရံု အမည္ -"

                />
                <TextView
                        android:id="@+id/txt_merchant_main_name"
                        style="@style/tablelayout_textview"
                        android:text="thti"
                />
            </TableRow>
            <TableRow
                    android:weightSum="2">
                <TextView
                        style="@style/tablelayout_textview"
                        android:text="ပြဲရံု လိပ္စာ -"

                />
                <TextView
                        android:id="@+id/txt_merchant_main_address"
                        style="@style/tablelayout_textview"
                        android:text="thti"
                />
            </TableRow>
            <TableRow
                    android:weightSum="2">
                <TextView
                        style="@style/tablelayout_textview"
                        android:text="ပြဲရံု အမ်ိဳးအစား -"

                />
                <TextView
                        android:id="@+id/txt_merchant_main_type"
                        style="@style/tablelayout_textview"
                        android:text="thti"
                />
            </TableRow>
            <TableRow
                    android:weightSum="2">
                <TextView
                        style="@style/tablelayout_textview"
                        android:text="ပြဲရံု ဖုန္း -"

                />
                <TextView
                        android:id="@+id/txt_merchant_main_phone"
                        style="@style/tablelayout_textview"
                        android:text="thti"
                />
            </TableRow>

        </TableLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>