<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        tools:context=".Merchant.MerchantListandPriceActivity">
    <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/cardView2" tools:layout_editor_absoluteX="5dp">
        <TableLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TableRow
                    android:weightSum="2">
                <TextView
                        style="@style/tablelayout_textview"
                        android:text="ပြဲရံု အမည္ -"

                />
                <TextView
                        android:id="@+id/txt_merchant_main_name"
                        style="@style/tablelayout_textview"
                        android:text="thti"
                />
            </TableRow>
            <TableRow
                    android:weightSum="2">
                <TextView
                        style="@style/tablelayout_textview"
                        android:text="ပြဲရံု လိပ္စာ -"

                />
                <TextView
                        android:id="@+id/txt_merchant_main_address"
                        style="@style/tablelayout_textview"
                        android:text="thti"
                />
            </TableRow>
            <TableRow
                    android:weightSum="2">
                <TextView
                        style="@style/tablelayout_textview"
                        android:text="ပြဲရံု အမ်ိဳးအစား -"

                />
                <TextView
                        android:id="@+id/txt_merchant_main_type"
                        style="@style/tablelayout_textview"
                        android:text="thti"
                />
            </TableRow>
            <TableRow
                    android:weightSum="2">
                <TextView
                        style="@style/tablelayout_textview"
                        android:text="ပြဲရံု ဖုန္း -"

                />
                <TextView
                        android:id="@+id/txt_merchant_main_phone"
                        style="@style/tablelayout_textview"
                        android:text="thti"
                />
            </TableRow>

        </TableLayout>
    </androidx.cardview.widget.CardView>


    <TableLayout
            android:layout_margin="5dp"
            android:padding="2dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/cardView2"
            android:id="@+id/tableLayout" tools:layout_editor_absoluteX="5dp">
        <TableRow android:weightSum="3">
              <TextView
                    android:text="အမည္"
                    style="@style/tablelayout_cardview"

            />
            <TextView
                    android:text="ယူနစ္"
                    style="@style/tablelayout_cardview"

            />
            <TextView
                    android:text="ေစ်း"
                    style="@style/tablelayout_cardview"

            />

        </TableRow>

    </TableLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/merchant_price_recycle"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sale"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ေရာင္းမည္"
            android:background="@color/colorPrimary"
            android:textColor="@color/primary_light"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>



</androidx.constraintlayout.widget.ConstraintLayout>