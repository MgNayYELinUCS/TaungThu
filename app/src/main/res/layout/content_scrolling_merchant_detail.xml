<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_merchant_detail"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="match_parent"
        tools:context=".Merchant.MerchantDetailActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TableLayout
                android:background="@drawable/spinner_background"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TableRow
                    android:weightSum="2">
                <TextView
                        style="@style/tablelayout_textview"
                        android:textStyle="bold"
                        android:text="ပြဲရံု အမည္ "

                />
                <TextView
                        android:id="@+id/txt_merchant_detail_name"
                        style="@style/tablelayout_textview"
                        android:text="thti"
                />
            </TableRow>
            <TableRow
                    android:weightSum="2">
                <TextView
                        android:textStyle="bold"
                        style="@style/tablelayout_textview"
                        android:text="ပြဲရံု လိပ္စာ "

                />
                <TextView
                        android:id="@+id/txt_merchant_main_address"
                        style="@style/tablelayout_textview"
                        android:text="thti"
                />
            </TableRow>
            <TableRow
                    android:weightSum="2">
                <TextView
                        android:textStyle="bold"
                        style="@style/tablelayout_textview"
                        android:text="ပြဲရံု အမ်ိဳးအစား"

                />
                <TextView
                        android:id="@+id/txt_merchant_main_type"
                        style="@style/tablelayout_textview"
                        android:text="thti"
                />
            </TableRow>
            <TableRow
                    android:weightSum="2">
                <TextView
                        style="@style/tablelayout_textview"
                        android:textStyle="bold"
                        android:text="ပြဲရံု ဖုန္း "

                />
                <TextView
                        android:id="@+id/txt_merchant_main_phone"
                        style="@style/tablelayout_textview"
                        android:text="thti"
                />
            </TableRow>

        </TableLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/merchant_price_recycle"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>



</androidx.core.widget.NestedScrollView>