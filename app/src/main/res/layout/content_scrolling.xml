<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_crop_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.CropDetailActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent">
      <com.toptoche.searchablespinnerlibrary.SearchableSpinner
              android:id="@+id/spinner_detail"
              android:padding="10dp"
              android:background="@drawable/spinner_background"
              android:layout_marginBottom="3dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

      </com.toptoche.searchablespinnerlibrary.SearchableSpinner>

        <TextView
                android:id="@+id/txt_crop_detail_name"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="24dp"
                android:padding="5dp"
                android:text="cropname"
                android:gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"/>
        <com.github.florent37.expansionpanel.ExpansionHeader
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                app:expansion_headerIndicator="@id/headerIndicator1"
                app:expansion_layout="@id/expansionLayout"
                app:expansion_toggleOnClick="true">

            <TextView
                    android:text="အကြောင်း အရာ"
                    android:textColor="@color/primary_light"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:adjustViewBounds="true"
                    android:id="@+id/headerIndicator1"
                    android:layout_gravity="center_vertical|right"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


        </com.github.florent37.expansionpanel.ExpansionHeader>

        <com.github.florent37.expansionpanel.ExpansionLayout
                android:id="@+id/expansionLayout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <androidx.cardview.widget.CardView
                    android:elevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

             <TextView
                     android:id="@+id/crop_detail_des"
                     android:layout_width="wrap_content"
                     android:textSize="18sp"
                     android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </com.github.florent37.expansionpanel.ExpansionLayout>

        <com.github.florent37.expansionpanel.ExpansionHeader
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                app:expansion_headerIndicator="@id/headerIndicator2"
                app:expansion_layout="@id/expansionLayout1"
                app:expansion_toggleOnClick="true">

            <TextView
                    android:text="သိုလှောင်နည်း"
                    android:textColor="@color/primary_light"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:adjustViewBounds="true"
                    android:id="@+id/headerIndicator2"
                    android:layout_gravity="center_vertical|right"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


        </com.github.florent37.expansionpanel.ExpansionHeader>

        <com.github.florent37.expansionpanel.ExpansionLayout
                android:id="@+id/expansionLayout1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <androidx.cardview.widget.CardView
                    android:elevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/crop_detail_store_method"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </com.github.florent37.expansionpanel.ExpansionLayout>


        <com.github.florent37.expansionpanel.ExpansionHeader
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                app:expansion_headerIndicator="@id/headerIndicator3"
                app:expansion_layout="@id/expansionLayout2"
                app:expansion_toggleOnClick="true">

            <TextView
                    android:text="မြေသြဇာ လုပ်နည်း"
                    android:textSize="20dp"
                    android:textColor="@color/primary_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:adjustViewBounds="true"
                    android:id="@+id/headerIndicator3"
                    android:layout_gravity="center_vertical|right"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


        </com.github.florent37.expansionpanel.ExpansionHeader>

        <com.github.florent37.expansionpanel.ExpansionLayout
                android:id="@+id/expansionLayout2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

            <androidx.cardview.widget.CardView
                    android:elevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/crop_detail_store_fertilizer"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </com.github.florent37.expansionpanel.ExpansionLayout>


    </LinearLayout>



</androidx.core.widget.NestedScrollView>