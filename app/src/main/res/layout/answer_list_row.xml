<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_margin="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/q_user_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:foreground="@color/overlay_light_20"
            android:src="@drawable/photo_female_1"
            app:civ_border="false" app:civ_shadow="true"
            app:civ_shadow_radius="0.0" />
    <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
            android:textSize="@dimen/spacing_large"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ans_user_name"
    android:text="name"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/ans_diss"
              android:text="discussion"
    />
    </LinearLayout>
</LinearLayout>