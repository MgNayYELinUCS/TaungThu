<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.ChooseCropActivity">


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_Crop"
            android:layout_width="match_parent"
            app:titleTextColor="#fff"
            app:title="စိုက္ပ်ိဳးေရး"
            app:navigationIcon="@drawable/ic_back"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="wrap_content">


    <com.google.android.material.chip.ChipGroup
            app:singleLine="true"
            android:id="@+id/chipGroup"
            app:singleSelection="true"
            android:layout_marginTop="10dp"
            android:theme="@style/AppTheme.Chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="အာလံုး"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Chip.Filter"
        />
        <com.google.android.material.chip.Chip
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="@color/colorPrimary"
                android:text="ႏွံစားသီးႏွံ"
                style="@style/Widget.MaterialComponents.Chip.Filter"
        />
            <com.google.android.material.chip.Chip
                    android:outlineAmbientShadowColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStrokeWidth="1dp"
                    app:chipStrokeColor="@color/colorPrimary"
                    android:text="ဆီထြက္သီးႏွံ"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
            />
            <com.google.android.material.chip.Chip
                    android:outlineAmbientShadowColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStrokeWidth="1dp"
                    app:chipStrokeColor="@color/colorPrimary"
                    android:text="ပဲမ်ိဳးစုံ"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
            />
            <com.google.android.material.chip.Chip
                    android:outlineAmbientShadowColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStrokeWidth="1dp"
                    app:chipStrokeColor="@color/colorPrimary"
                    android:text="အျခားသီးႏွံ"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
            />

    </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/choose_crop_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>