<?xml version="1.0" encoding="utf-8"?>


<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:orientation="vertical"
        tools:context=".Activity.MerchantRegisterActivity"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

<androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_merchant_register"
        android:layout_width="match_parent"
        app:titleTextColor="#fff"
        app:title="Merchant Register"
        app:navigationIcon="@drawable/ic_back"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />
<TableLayout
        android:layout_margin="12dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!--<TableRow android:weightSum="3"
            android:layout_marginBottom="20dp">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Merchant Register"/>
    </TableRow>-->
    <TableRow android:weightSum="3"
            android:layout_marginBottom="20dp">
        <TextView
                android:layout_weight="1"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
        />
        <EditText
                android:id="@+id/txt_merchant_register_name"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </TableRow>
    <TableRow android:weightSum="3" android:layout_marginBottom="20dp">
        <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textSize="18dp"

                />
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinner_merchant_register_type"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </TableRow>

    <TableRow android:weightSum="3" android:layout_marginBottom="20dp">
        <TextView
                android:textSize="18dp"

                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
        />
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinner_merchant_register_city"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </TableRow>
    <TableRow android:weightSum="3" android:layout_marginBottom="20dp">
        <TextView
                android:layout_weight="1"
                android:textSize="18dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
        />
        <EditText
                android:id="@+id/txt_merchant_register_address"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow android:weightSum="3">
        <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="18dp"

                />
        <EditText
                android:id="@+id/txt_merchant_register_phoneno"
                android:layout_weight="2"
                android:inputType="phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </TableRow>


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">
        <Button
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:id="@+id/merchant_register"
                android:text="register"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
    </LinearLayout>

</TableLayout>
</LinearLayout>