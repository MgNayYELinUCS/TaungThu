<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DrawerActivity.ProfileInformationActivity">

    <ImageView
            android:id="@+id/profile_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/userpng"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nay Ye Lin"
            app:layout_constraintTop_toBottomOf="@+id/profile_img" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.057"/>
    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/profile_phoneno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0912345678"
            app:layout_constraintTop_toBottomOf="@+id/profile_name" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_profile_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="အခ်က္အက္မ်ား ျပငိမည္"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/primary_light"
            app:layout_constraintTop_toBottomOf="@+id/profile_phoneno"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.935"/>


</androidx.constraintlayout.widget.ConstraintLayout>